#ifndef bioSeveralExpressions_h
#define bioSeveralExpressions_h

#include <map>
#include "bioExpression.h"
#include "bioString.h"

class bioSeveralExpressions: public bioExpression {
public:
  bioSeveralExpressions(std::map<bioString, bioExpression*> exprs) ;
  ~bioSeveralExpressions() ;
  virtual bioString print(bioBoolean hp = false) const ;
  virtual bioReal getValue() ;
  std::map<bioString, bioReal > getValues() ;
  const bioDerivatives* getValueAndDerivatives(std::vector<bioUInt> literalIds,
					       bioBoolean gradient,
					       bioBoolean hessian) ;
  std::map<bioString, const bioDerivatives* >
  getAllValueAndDerivatives(std::vector<bioUInt> literalIds,
			    bioBoolean gradient,
			    bioBoolean hessian) ;
private:
  std::map<bioString, bioExpression*> theExpressions ;
};
#endif
