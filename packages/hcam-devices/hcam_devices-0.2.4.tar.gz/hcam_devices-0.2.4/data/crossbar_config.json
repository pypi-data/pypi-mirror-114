{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web",
                            "options": {
                                "enable_directory_listing": true
                            }
                        },
                     "info": {
                                "type": "nodeinfo"
                        },
                        "ws": {
                            "type": "websocket"
                        },
                     "call": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous"
                        },
                     "publish": {
                            "type": "publisher",
                            "realm": "realm1",
                            "role": "anonymous"
                        }
                    }
                }
            ]
        }
    ]
}
