    "version": "0.2.0",
    "configurations": [
        {
            "name": "SXM Client: Launch",
            "type": "python",
            "request": "launch",
            "module": "sxm",
            "args": [
                "-v",
            ]
        },
        {
            "name": "SXM Client: List Channels",
            "type": "python",
            "request": "launch",
            "module": "sxm",
            "args": [
                "-l",
            ]
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        }
    ]
}
