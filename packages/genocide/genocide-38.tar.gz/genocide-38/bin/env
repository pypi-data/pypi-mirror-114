import os

old =  os.getcwd()

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("bin/clean")
    try:
        shutil.rmtree("build")
    except:
        pass
    try:
        shutil.rmtree("dist")
    except:
        pass
    try:
        shutil.rmtree("genocide.egg-info")
    except:
        pass
    for line in os.popen("python3 setup.py sdist").readlines():
        print(line.strip())
    #open("rm -fR ~/.cache/pip/")
    open("python3 -mvirtualenv -p python3 env")
    open("env/bin/pip3 install genocide -f dist --upgrade --force-reinstall")

if __name__ == "__main__":
    main()
    open("tar zcf env.tar.gz env")
