{% for msg, data in req.flashes %}
	{%- if data["level"] == "danger" -%}
		{% set fc = "bg-red-100 border-red-500 text-red-700" %}
	{%- elif data["level"] == "warning" -%}
		{% set fc = "bg-orange-100 border-orange-500 text-orange-700" %}
	{%- else -%}
		{% set fc = "bg-green-100 border-green-500 text-green-700" %}
	{%- endif -%}
	<div class="{{ fc }} border-l-4 p-4 mb-4" role="alert">
		<p class="font-bold">{{ msg | safe }}</p>
		{%- if "body" in data %}<p>{{ data["body"] | safe }}</p>{% endif %}
	</div>
{%- endfor %}
